<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="org.lwt.tour.model">
	<class name="Scenic" table="Scenic_info">
  		<!-- 映射标识属性 -->
        <id column="s_id" name="s_id" type="integer">
   			 <!-- 指定使用identity主键生成策略 -->
            <generator class="identity"/>
        </id>
 		 <!-- 映射普通属性 -->
 		<property column="s_name" length="100" name="s_name" not-null="true" type="string"/>
 		<property column="price" length="30" name="price" type="string"/>
 		<property column="address" length="100" name="address" type="string"/>
 		<property column="imageUrl" length="100" name="imageUrl" type="string"/>
 		<property column="bgUrl" length="100" name="bgUrl" type="string"/>
 		<property column="description" length="500" name="description" type="string"/>
 		<many-to-one name="city" column="city_id" not-null="true" lazy="false"/> 
 		<many-to-one name="scenicClass" column="scenicClass_id" not-null="true" lazy="false"/> 
	</class>
</hibernate-mapping>